{
  "name": "shell",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "shells/shell/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:application",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/shell",
        "index": "shells/shell/src/index.html",
        "browser": "shells/shell/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "shells/shell/tsconfig.app.json",
        "assets": [
          {
            "glob": "**/*",
            "input": "shells/shell/public"
          }
        ],
        "styles": [
          "shells/shell/src/styles.css",
          "node_modules/@ngxpert/hot-toast/src/styles/styles.css",
          "node_modules/prismjs/themes/prism-okaidia.css"
        ],
        "scripts": [
          "node_modules/prismjs/prism.js",
          "node_modules/prismjs/components/prism-csharp.min.js",
          "node_modules/prismjs/components/prism-css.min.js"
        ]
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "4mb",
              "maximumError": "4mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4mb",
              "maximumError": "4mb"
            }
          ],
          "outputHashing": "all",
          "fileReplacements": [
            {
              "replace": "shells/shell/src/environments/environment.ts",
              "with": "shells/shell/src/environments/environment.prod.ts"
            }
          ]
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        },
        "ecom": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true,
          "fileReplacements": [
            {
              "replace": "shells/shell/src/environments/environment.ts",
              "with": "shells/shell/src/environments/environment.ecom.ts"
            }
          ]
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "continuous": true,
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "shell:build:production"
        },
        "development": {
          "buildTarget": "shell:build:development"
        },
        "ecom": {
          "buildTarget": "shell:build:ecom"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "shell:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "shell:build",
        "staticFilePath": "dist/shells/shell/browser",
        "spa": true
      }
    }
  }
}
